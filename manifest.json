{
    "manifest_version": 3,
    "name": "INGDLC for Afreeca",
    "version": "1.3.2",
    "description": "아프리카TV 도배, 캡쳐, VOD·클립·캐치 저장(Beta), 자동UP, 방송 시작 시 새로고침, 채팅창 광고 제거, 자동 도배 가져오기",
    "icons": {
      "128": "icons/icon.png"
    },
    "background": {
      "service_worker": "src/serviceWorker.js",
      "type": "module"
    },
    "action": {
      "default_icon": {
        "128": "icons/icon.png"
    },
      "default_title": "INGDLC for Afreeca",
      "default_popup": "main.html"
    },
    "options_page": "main.html",
    "web_accessible_resources": [
      {
        "resources": [
          "src/config.mjs",
          "src/utils.mjs",
          "tailwindcss.js"
        ],
        "type": "module",
        "matches": [
          "https://cafe.naver.com/*",
          "https://play.afreecatv.com/*",
          "https://vod.afreecatv.com/*"
        ]
      }
    ],
    "permissions": [
      "notifications",
      "storage",
      "webRequest",
      "activeTab",
      "tabs",
      "downloads"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://play.afreecatv.com/*"
        ],
        "js": [
          "src/liveMujisung.js",
          "src/liveController.js",
          "src/liveBtns.js",
          "src/liveBroadCheck.js"
        ]
      },
      {
        "matches": [
          "https://vod.afreecatv.com/*"
        ],
        "js": [
          "src/vodBtns.js",
          "src/vodFuncs.js"
        ]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }